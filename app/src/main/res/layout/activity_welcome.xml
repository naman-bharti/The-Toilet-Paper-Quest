<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_background"
    tools:context=".ui.Welcome">

    <Button
        android:id="@+id/welcome_btn_mm"
        android:layout_width="180dp"
        android:layout_height="72dp"
        android:layout_marginStart="206dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="211dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2" />

    <ImageView
        android:id="@+id/title1"
        android:layout_width="657dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/name1" />

    <ImageView
        android:id="@+id/title2"
        android:layout_width="272dp"
        android:layout_height="48dp"
        android:layout_marginStart="188dp"
        android:layout_marginEnd="187dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title1"
        app:srcCompat="@drawable/name2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="246dp"
        android:layout_height="82dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="161dp"
        android:layout_marginEnd="594dp"
        android:layout_marginBottom="189dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2"
        app:layout_constraintVertical_bias="0.303"
        app:srcCompat="@drawable/created_by" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginStart="135dp"
        android:layout_marginEnd="457dp"
        android:layout_marginBottom="61dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.076"
        app:srcCompat="@drawable/naman_bharti" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="285dp"
        android:layout_height="44dp"
        android:layout_marginStart="135dp"
        android:layout_marginEnd="457dp"
        android:layout_marginBottom="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.136"
        app:srcCompat="@drawable/ekam_hothi" />

    <ImageView
        android:id="@+id/animationToiletPaper"
        android:layout_width="97dp"
        android:layout_height="77dp"
        android:layout_marginStart="179dp"
        android:layout_marginTop="199dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="49dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/title1"
        app:srcCompat="@drawable/toilet_paper_animation" />

</androidx.constraintlayout.widget.ConstraintLayout>